<Window x:Class="algorithm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:algorithm"
        mc:Ignorable="d"
    Title="Closest Pair" Height="550" Width="500">
    <StackPanel>
        <Grid Height="450">
            <Canvas Background="LightYellow" x:Name="canvas1" Width="400" Height="400" />
        </Grid>
        <Grid Height="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" x:Name="btnCreate" Content="생성" Height="30" 
             VerticalAlignment="Top" Click="BtnCreate_Click"/>
                <TextBlock Width="50"/>
                <Button Width="100" x:Name="btnFind" Content="찾기" Click="BtnFind_Click"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
